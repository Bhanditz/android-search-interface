<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim_result_row_size"
    android:background="@android:color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="5dip">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/dim_result_row_thumbnail_size"
        android:layout_height="@dimen/dim_result_row_thumbnail_size"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dip"
        android:layout_toEndOf="@+id/thumbnail"
        android:baselineAligned="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header"
            style="@style/result_row_header" />

        <TextView
            android:id="@+id/subheader1"
            style="@style/result_row_subheader1" />

        <TextView
            android:id="@+id/subheader2"
            style="@style/result_row_subheader2" />
    </LinearLayout>
</RelativeLayout>